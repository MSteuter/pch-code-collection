{
  "name": "iobroker.pch",
  "version": "0.0.1",
  "description": "Connects Philips Clean Home devices to ioBroker",
  "author": {
    "name": "Christopher Holomek",
    "email": "holomekc.github@gmail.com"
  },
  "homepage": "https://github.com/holomekc/iobroker.pch",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "Philips Clean Home",
    "Smart Home",
    "home automation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/holomekc/iobroker.pch"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^2.2.1",
    "clean-home": "file://<mydir>/clean-home-0.0.1.tgz",
    "rxjs": "^6.5.5",
    "moment": "^2.24.0"
  },
  "devDependencies": {
    "@iobroker/testing": "^2.0.0",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/gulp": "^4.0.6",
    "@types/mocha": "^5.2.7",
    "@types/node": "^10.14.22",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^7.5.0",
    "@types/sinon-chai": "^3.2.2",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "axios": "^0.19.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^6.8.0",
    "gulp": "^4.0.2",
    "mocha": "^7.1.0",
    "nyc": "^15.0.0",
    "proxyquire": "^2.1.3",
    "rimraf": "^3.0.2",
    "sinon": "^8.1.1",
    "sinon-chai": "^3.5.0",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  },
  "main": "build/main.js",
  "scripts": {
    "prebuild": "rimraf ./build",
    "build:ts": "tsc -p tsconfig.build.json",
    "build": "npm run build:ts",
    "watch:ts": "tsc -p tsconfig.build.json --watch",
    "watch": "npm run watch:ts",
    "test:ts": "mocha --opts test/mocha.custom.opts",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "coverage": "nyc npm run test:ts",
    "lint": "eslint --ext .ts src",
    "pack": "npm run build && npm pack"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "bugs": {
    "url": "https://github.com/holomekc/iobroker.pch/issues"
  },
  "readmeFilename": "README.md"
}
